//- Show one User

extends ../../layout

block content
  .row.user-show__container
    .small-12.large-3.columns
      a(href="/")
        img.user-show__logo(src="/assets/img/logo.png", alt="SD Hacks 2016")
      span.user-show__name #{user.firstName} #{user.lastName}
      ul.user-show__details
        li.user-show__details--item
          i.fa.fa-university
          | #{user.university}
        li.user-show__details--item
          i.fa.fa-graduation-cap
          | #{user.major}
        li.user-show__details--item
          i.fa.fa-envelope
          | #{user.email}
        li.user-show__details--item
          i.fa.fa-github
          | #{user.github}
        li.user-show__details--item
          i.fa.fa-globe
          a(href=user.website) #{user.website}

    .small-12.large-9.columns
      h3.user-show__questions--header Your Details
      .row.user-show__questions
        .small-12.large-4.columns
          .user-show__question Gender
        .small-12.large-8.columns
          .user-show__answer #{user.gender}

        .small-12.large-4.columns
          .user-show__question Birthdate
        .small-12.large-8.columns
          .user-show__answer #{moment(user.birthdate).format('MM/DD/YYYY')}

        .small-12.large-4.columns
          .user-show__question Phone Number
        .small-12.large-8.columns
          .user-show__answer +1 #{user.phone}

        .small-12.large-4.columns
          .user-show__question Graduation Year
        .small-12.large-8.columns
          .user-show__answer #{user.year}

        .small-12.large-4.columns
          .user-show__question Resume
        .small-12.large-8.columns
          .user-show__answer
            a(href=user.resume.url) Download

      h3.user-show__questions--header SD Hacks Details
      .row.user-show__questions
        .small-12.large-4.columns
          .user-show__question Dietary Restrictions
        .small-12.large-8.columns
          .user-show__answer #{user.diet !== "" ? user.diet : "None"}

        if user.travel.outOfState
          .small-12.large-4.columns
            .user-show__question City
          .small-12.large-8.columns
            .user-show__answer #{user.travel.city}

        .small-12.large-4.columns
          .user-show__question T-Shirt Size
        .small-12.large-8.columns
          .user-show__answer #{user.shirtSize}

        .small-12.large-4.columns
          .user-show__question First Hackathon?
        .small-12.large-8.columns
          .user-show__answer #{user.firstHackathon}

        .small-12.large-4.columns
          .user-show__question Outcome
        .small-12.large-8.columns
          .user-show__answer #{user.outcomeStmt}

        .small-12.large-4.columns
          .user-show__question Desired Teammates
        .small-12.large-8.columns
          .user-show__answer 
            | #{user.teammates.join(', ')}